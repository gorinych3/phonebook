<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.egor.model.User" table="users" catalog="phonebook_post">
        <id name="id" column="user_id">
            <generator class="identity"></generator>
        </id>

        <property name="f_name" column="f_name" type="string"/>
        <property name="l_name" column="l_name" type="string"/>
        <property name="address" column="address" type="string"/>
        <property name="home_phone" column="home_phone" type="string"/>
        <property name="m_phone" column="m_phone" type="string"/>
        <property name="profession" column="profession" type="string"/>
    </class>
</hibernate-mapping>