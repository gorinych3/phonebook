        <servlet-name>add</servlet-name>
        <servlet-class>ru.egor.servlets.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>ru.egor.servlets.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>ru.egor.servlets.UpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>ru.egor.servlets.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>selectAll</servlet-name>
        <servlet-class>ru.egor.servlets.SelectAllServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>selectAll</servlet-name>
        <url-pattern>/selectAll</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchById</servlet-name>
        <servlet-class>ru.egor.servlets.SearchByIdServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>searchById</servlet-name>
        <url-pattern>/searchById</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchByFirstName</servlet-name>
        <servlet-class>ru.egor.servlets.SearchByFirstNameServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>searchByFirstName</servlet-name>
        <url-pattern>/searchByFirstName</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchByMobilePhone</servlet-name>
        <servlet-class>ru.egor.servlets.SearchByMobilePhoneServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>searchByMobilePhone</servlet-name>
        <url-pattern>/searchByMobilePhone</url-pattern>
    </servlet-mapping>

</web-app>

